{
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@stellar-prompt/*": ["components/stellar-prompt/*"],
      "@services/*": ["services/*"]
    },
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "declaration": false,
    "experimentalDecorators": true,
    "lib": ["dom", "es2017"],
    "moduleResolution": "node",
    "module": "esnext",
    "target": "es2017",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "jsxFactory": "h",
    "sourceMap": false,
    "inlineSourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
